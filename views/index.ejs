        <option value="nsfw"<%=selected.flags ==="nsfw"?"selected":""%>>nsfw</option>
    </select>

<label for="language" >choose language</label>
<select name="language">
    <option value="en"<%=selected.language  ==="English"?"selected":""%>>English</option>
     <option value="de"<%=selected.language  ==="German"?"selected":""%>>German</option>
      <option value="cs"<%=selected.language  ==="Czech"?"selected":""%>>Czech</option>
       <option value="it"<%=selected.language  ==="Italian"?"selected":""%>>Italian</option>
       <option value="ru"<%=selected.language  ==="Russian"?"selected":""%>>Russian</option>
</select>

<button type="submit">Get Joke</button>
<div class="response-area">
    <P><%=content %></P>
</div>

</data>
