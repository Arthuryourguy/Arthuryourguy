 <form action="/get-joke" method="post" class="main">
 <data>
   <select name="category" >
    <option value="Programming"<%=selected.category ==="Programming"?"selected" :""%>>Programming</option> 
    <option value="Misc"<%=selected.category ==="Misc"?"selected":""%>>Misc</option> 
    <option value="Pun"<%=selected.category ==="Pun"?"selected":""%>>Pun</option> 
    <option value="Spooky"<%=selected.category ==="Spooky"?"selected":""%>>Spooky</option> 
    <option value="Christmas"<%=selected.category ==="Christmas"?"selected":""%>>Christmas</option> 
   </select>

	<select name="?type" >
        <option value="single"<%=selected.type ==="single"?"selected":""%>>single</option>
         <option value="twotype"<%=selected.type ==="twotype"?"selected":""%>>twotype</option>
    </select>
        
	<select name="flags"  >
		<option value="political"<%=selected.flags ==="political"?"selected":""%>>political</option>
